<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/file1"
    tools:context=".ThirdActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="413dp"
        android:layout_height="277dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/file1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/editText6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/enter_word"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textColor="#050E41"
            android:textStyle="bold"
            tools:targetApi="o" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="#5A8673"
            android:text="@string/done"
            android:textSize="25sp"
            tools:fontFamily="@font/fredoka_one" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/enter_word"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#050E41"
            tools:targetApi="o" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="#D41C2C"
            android:text="@string/done"
            android:textSize="25sp"
            tools:fontFamily="@font/fredoka_one" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:layout_weight=".50"
        android:text="@string/player1"
        android:textAlignment="center"
        android:textColor="#050E41"
        android:textSize="30sp"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="183dp"
        android:layout_height="83dp"
        android:layout_weight=".50"
        android:text="@string/player2"
        android:textAlignment="center"
        android:textColor="#050E41"
        android:textSize="30sp"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="185dp"
        android:layout_height="84dp"
        android:text="@string/_0_points"
        android:textAlignment="center"
        android:textColor="#050E41"
        android:textSize="30sp"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="185dp"
        android:layout_height="84dp"
        android:layout_marginBottom="48dp"
        android:text="@string/_0_points"
        android:textAlignment="center"
        android:textColor="#050E41"
        android:textSize="30sp"
        app:fontFamily="@font/fredoka_one"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>